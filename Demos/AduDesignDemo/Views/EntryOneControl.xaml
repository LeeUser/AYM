<UserControl x:Class="AduDesignDemo.Views.EntryOneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:attached="clr-namespace:DMSkin.Attached;assembly=DMSkin"
             xmlns:dmskin="clr-namespace:DMSkin;assembly=DMSkin"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AduDesignDemo.Views"
             mc:Ignorable="d" 
             Background="#00465B"
             Opacity="0.9"
             d:DesignHeight="390" d:DesignWidth="800">
    <Grid>
        <ScrollViewer Style="{StaticResource DMScrollViewer}" HorizontalScrollBarVisibility="Disabled" Padding="10">
            <StackPanel>
                <TextBlock Text="出口工作模式和状态" FontSize="12" Margin="5,0" FontWeight="Bold" Foreground="#FCC917"></TextBlock>
                <Border Margin="6,6,6,6" Background="#E7E8E9" CornerRadius="4"   >
                    <Image Name="btnMenu" Source="Images\EntryOne.png" Height="370" HorizontalAlignment="Left"></Image>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
