                                <!--<TextBlock Text="Product Sales" Margin="0,5" FontSize="12"  Foreground="#fff"></TextBlock>-->
                                <ProgressBar Style="{StaticResource AduProgressBar}"
                                                            Margin="0,5"
                                                            Background="#DB5D5D"
                                                            Maximum="50"
                                                            Value="30" />
                                <TextBlock Text="断开" FontSize="10"  Foreground="#fff"></TextBlock>
                            </StackPanel>
                        </Border>
                        <Border Background="#20ffffff" CornerRadius="4" Padding="10" Margin="6">
                            <StackPanel>
                                <TextBlock Text="WMS状态" FontSize="18" FontWeight="Bold" Foreground="#fff"></TextBlock>
                                <!--<TextBlock Text="Delivery Process" Margin="0,5" FontSize="12"  Foreground="#fff"></TextBlock>-->
                                <ProgressBar Style="{StaticResource AduProgressBar}"
                                                            Margin="0,5"
                                                            Background="#4DB9A7"
                                                            Maximum="50"
                                                            Value="40" />
                                <TextBlock Text="正常" FontSize="10"  Foreground="#fff"></TextBlock>
                            </StackPanel>
                        </Border>
                        <Border Background="#20ffffff" CornerRadius="4" Padding="10" Margin="6">
                            <StackPanel>
                                <TextBlock Text="MDA状态" FontSize="18" FontWeight="Bold" Foreground="#fff"></TextBlock>
                                <!--<TextBlock Text="New Users" Margin="0,5" FontSize="12"  Foreground="#fff"></TextBlock>-->
                                <ProgressBar Style="{StaticResource AduProgressBar}"
                                                            Margin="0,5"
                                                            Background="#4DB9A7"
                                                            Maximum="50"
                                                            Value="44" />
                                <TextBlock Text="正常" FontSize="10"  Foreground="#fff"></TextBlock>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </Border>
                <TextBlock Text="系统提示信息" FontSize="12" Margin="5,1" Foreground="#fff"></TextBlock>
